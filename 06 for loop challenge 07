direction = input("Which direction do you want to count, u for up and d for down.").lower()
if direction == "u":
    top_number = int(input("I demand thou giveth me a number at once"))
    for top_number in range(1,top_number+1,1):
                     print(top_number)
elif direction == "d":
    num1 = int(input("Enter a number below 20"))
    if num1 < 20:
        for num1 in range(20,num1 - 1,-1):
            print(num1)
else:
    print("I don't understand")
